<!DOCTYPE html>
<html lang="en">
  <head>
    <style>
      body {
        font-family: "Segoe UI", Tahoma, Geneva, Verdana, sans-serif;
      }
      table,
      th,
      td {
        border: 2px solid red;
        border-collapse: collapse;
      }
    </style>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>URL Shortner</title>
  </head>
  <body>
    <h1>URL Shortner</h1>
    <% if (locals.id) { %>
    <h3>URL Generated: http://127.0.0.1:3000/url/getfullurl/<%= id %></h3>
    <% delete id %> <% } %>
    <div>
      <form action="/url/generate" method="post" id="myForm">
        <label>Enter your original URL</label>
        <input type="text" name="url" placeholder="https://youtube.com" />
        <button type="submit">Generate</button>
      </form>
    </div>
    <br />
    <div>
      <% if (locals.urls.length>0) { %>
      <table>
        <thead>
          <th>S. No</th>
          <th>Short Id</th>
          <th>Redirect To</th>
          <th>Count</th>
        </thead>
        <tbody>
          <% urls.forEach((url,index) => { %>
          <tr>
            <td><%= index+1 %></td>
            <td><%= url.shortId %></td>
            <td><%= url.redirectURL %></td>
            <td><%= url.visitHistory.length %></td>
          </tr>
          <% }) %>
        </tbody>
      </table>
      <% } %>
    </div>
  </body>
</html>
